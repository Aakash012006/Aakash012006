#include<stdio.h>

int main() {
    int rows;
    char sl;
    printf ("Enter a Character : ");
    scanf("%c",&sl);

    printf("Enter the number of rows: ");
    scanf("%d", &rows);

    for (int i = 1; i <= rows; ++i)
 {
        for (int j = 1; j <= i; ++j)
        {
            printf("%c",sl);
        }
        printf("\n");
 }

    return 0;
}